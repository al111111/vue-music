// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 图片区域未加载时撑开
img-padding(crown)
  width: 100%
  overflow: hidden
  height: 0
  padding-bottom: crown

//区块占满剩余屏幕
screenFull(top)
  position: absolute
  top: top
  left: 0
  right: 0
  bottom: 0